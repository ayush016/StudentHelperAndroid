<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    <style name="SplashThemeBase" parent="Theme.AppCompat.DayNight.DarkActionBar">-->
    <style name="SplashThemeBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/statusColor</item>
        <item name="android:navigationBarColor">@color/navigationColor</item>

        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>

<!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->

<!--        <item name="android:windowTranslucentNavigation">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="SplashThemeNoTitleBase" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashThemeBase.DefaultBg"/>

    <style name="SplashThemeBase.NoBg">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="SplashThemeBase.TransparentBg">
        <item name="android:windowDisablePreview">true</item>
    </style>

<!--    <style name="SplashThemeNoTitleBase.FakeBg" >-->
    <style name="SplashThemeBase.FakeBg" >
<!--        <item name="android:windowBackground">@color/customizeBgColor</item>-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashThemeBase.WithBg">
        <item name="android:windowBackground">@drawable/ic_splash_bg_kt</item>
    </style>

    <style name="SplashThemeBase.WithBg.SplashContent"/>
</resources>