<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TargetScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/statusColor</item>
        <item name="android:navigationBarColor">@color/navigationColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="SplashScreenTheme" parent="SplashScreenTheme.Base">
<!--        &lt;!&ndash; animated icon &ndash;&gt;-->
<!--        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_kotlin_hero_new_animated_total</item>-->
        <!-- specify static icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <style name="SplashScreenTheme.Base" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/statusColor</item>
        <item name="android:navigationBarColor">@color/navigationColor</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- animation duration-->
        <item name="windowSplashScreenAnimationDuration">@integer/icon_animator_duration</item>
        <!-- screen background color -->
        <item name="windowSplashScreenBackground">@color/customizeBgColor</item>

        <!-- target activity theme-->
        <item name="postSplashScreenTheme">@style/TargetScreenTheme</item>
    </style>
</resources>